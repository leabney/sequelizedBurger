<div class="container-fluid" id="burgerContainer">
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>Ready to Eat</h1>
      <ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false }}
    {{/unless}}
  {{/each}}
</ul>


    </div>
    <div class="col-sm-6">
      <h1>Already Devoured</h1>
      <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
    </div>
    
  </div>
</div>


<div class="row">
    <h3>Add a Burger</h3>


    <form class="form-inline" id="addBurger">

      <div class="form-group ml-sm-5 mr-sm-4 mb-2">

        <input type="text" class="form-control" id="name" placeholder="Burger Name">
      </div>
      <button id="submit" type="submit" class="btn btn-info mb-2">Add</button>
       <button id="remove" type="submit" class="btn btn-danger mb-2 ml-5">Remove All Burgers</button>
      
    </form>
  </div>


</div>